  ggplot(aes(x = voicing, y = vowel_dur, shape = prosodic_boundary)) +
  stat_summary(fun.data = "mean_cl_boot", geom = "pointrange") +
  stat_summary(geom = "line", aes(group = prosodic_boundary, lty=prosodic_boundary)) +
  labs(x = "Voicing",
       y = "Vowel duration (msec)",
